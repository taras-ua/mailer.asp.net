<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")

</head>
<body>
    <div>
        @Html.ActionLink("ASP.NET Mailer Example", "Index", "Home", new { area = "" })
    </div>
    <div>
        @RenderBody()
        <hr />
        <footer>
            <p>@DateTime.Now.Year - ASP.NET Mailer Example</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
